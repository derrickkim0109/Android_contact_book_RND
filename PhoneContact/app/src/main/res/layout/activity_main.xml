<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/detail_icon_profile"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="300dp"
                    android:maxHeight="300dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_person" />

                <ImageButton
                    android:id="@+id/detail_Btn_plus"
                    android:layout_width="45dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="260dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="50dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginLeft="9dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/usericon"
                />
            <EditText
                android:background="@drawable/edittext_rounded_corner_rectangl"
                android:id="@+id/detail_Edit_username"
                android:layout_width="300dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:hint=" 성명"
                android:inputType="text"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_phone"
                android:layout_marginLeft="9dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/detail_Edit_"
                android:background="@drawable/edittext_rounded_corner_rectangl"
                android:layout_width="300dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:hint=" 번호"
                android:inputType="text"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_email"
                android:layout_marginLeft="9dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/detail_Edit_useremail"
                android:hint=" 이메일"
                android:inputType="text"
                android:background="@drawable/edittext_rounded_corner_rectangl"
                android:layout_width="300dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_marginLeft="9dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/relation"
                />
            <EditText
                android:id="@+id/detail_Edit_relation"
                android:hint=" 관계"
                android:inputType="text"
                android:background="@drawable/edittext_rounded_corner_rectangl"
                android:layout_width="300dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/firstlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/secondlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/thirdlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/fourthlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:src="@drawable/fifthlight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/address"
                android:layout_marginLeft="9dp"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/detail_Edit_address"
                android:hint=" 주소"
                android:background="@drawable/edittext_rounded_corner_rectangl"
                android:layout_width="300dp"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/comment"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="10dp"
                android:maxWidth="36dp"
                android:maxHeight="36dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/detail_Edit_comment"
                android:hint=" 코멘트"
                android:background="@drawable/edittext_rounded_corner_rectangl"
                android:layout_width="300dp"
                android:layout_marginLeft="14dp"
                android:layout_height="140dp"
                android:lines="5"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:minWidth="10.0dip"
                android:maxWidth="5.0dip"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_enrollBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/detail_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>